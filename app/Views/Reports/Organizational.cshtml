@model List<app.ViewModels.OrganizationalReportViewModel>
@{
    ViewData["Title"] = "Estructura Organizacional";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h4 class="mb-0">
                                <i class="bi bi-diagram-3"></i> Estructura Organizacional
                            </h4>
                            <small>Organización por departamentos con gerentes y empleados</small>
                        </div>
                        <div>
                            <button class="btn btn-light btn-sm" onclick="window.print()">
                                <i class="bi bi-printer"></i> Imprimir
                            </button>
                        </div>
                    </div>
                </div>

                <div class="card-body">
                    <!-- Resumen General -->
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="alert alert-info">
                                <h6><i class="bi bi-building"></i> Total de Departamentos</h6>
                                <h4 class="mb-0">@ViewBag.DepartmentCount</h4>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="alert alert-primary">
                                <h6><i class="bi bi-people"></i> Total de Empleados</h6>
                                <h4 class="mb-0">@ViewBag.TotalEmployees</h4>
                            </div>
                        </div>
                    </div>

                    <!-- Estructura Organizacional -->
                    @if (Model.Any())
                    {
                        @foreach (var department in Model)
                        {
                            <div class="card mb-4 border-success">
                                <div class="card-header bg-light">
                                    <div class="row align-items-center">
                                        <div class="col-md-8">
                                            <h5 class="mb-0">
                                                <i class="bi bi-building text-success"></i>
                                                @department.DepartmentName
                                                <span class="badge bg-success ms-2">@department.EmployeeCount empleados</span>
                                            </h5>
                                        </div>
                                        <div class="col-md-4 text-end">
                                            @if (department.Manager != null)
                                            {
                                                <span class="badge bg-warning text-dark">
                                                    <i class="bi bi-person-badge"></i> Gerente: @department.Manager.FullName
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">Sin Gerente Asignado</span>
                                            }
                                        </div>
                                    </div>
                                </div>

                                <div class="card-body">
                                    @if (department.Manager != null)
                                    {
                                        <!-- Información del Gerente -->
                                        <div class="row mb-3">
                                            <div class="col-12">
                                                <div class="alert alert-warning">
                                                    <div class="d-flex align-items-center">
                                                        <div class="me-3">
                                                            <i class="bi bi-person-badge fs-2"></i>
                                                        </div>
                                                        <div>
                                                            <h6 class="mb-1">Gerente del Departamento</h6>
                                                            <strong>@department.Manager.FullName</strong> (Emp. No. @department.Manager.EmpNo)
                                                            <br>
                                                            <small class="text-muted">Desde: @department.Manager.FromDate</small>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }

                                    <!-- Lista de Empleados -->
                                    @if (department.Employees.Any())
                                    {
                                        <h6 class="mb-3">
                                            <i class="bi bi-people"></i> Empleados del Departamento
                                        </h6>
                                        <div class="table-responsive">
                                            <table class="table table-striped table-sm">
                                                <thead class="table-dark">
                                                    <tr>
                                                        <th>Emp. No.</th>
                                                        <th>Nombre Completo</th>
                                                        <th>Cargo</th>
                                                        <th>Fecha de Ingreso al Depto.</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var employee in department.Employees)
                                                    {
                                                        <tr class="@(department.Manager?.EmpNo == employee.EmpNo ? "table-warning" : "")">
                                                            <td>
                                                                @employee.EmpNo
                                                                @if (department.Manager?.EmpNo == employee.EmpNo)
                                                                {
                                                                    <i class="bi bi-star-fill text-warning" title="Gerente"></i>
                                                                }
                                                            </td>
                                                            <td>@employee.FullName</td>
                                                            <td>
                                                                <span class="badge bg-secondary">@employee.Title</span>
                                                            </td>
                                                            <td>@employee.FromDate</td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="alert alert-info">
                                            <i class="bi bi-info-circle"></i> No hay empleados asignados a este departamento.
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="alert alert-warning text-center">
                            <i class="bi bi-exclamation-triangle"></i>
                            No hay datos de estructura organizacional disponibles.
                        </div>
                    }

                    <!-- Estadísticas Adicionales -->
                    @if (Model.Any())
                    {
                        <div class="card mt-4">
                            <div class="card-header bg-info text-white">
                                <h5 class="mb-0">
                                    <i class="bi bi-graph-up"></i> Estadísticas de la Organización
                                </h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-3">
                                        <div class="text-center">
                                            <h4 class="text-primary">@Model.Count(d => d.Manager != null)</h4>
                                            <small class="text-muted">Departamentos con Gerente</small>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="text-center">
                                            <h4 class="text-warning">@Model.Count(d => d.Manager == null)</h4>
                                            <small class="text-muted">Departamentos sin Gerente</small>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="text-center">
                                            <h4 class="text-success">@(Model.Any() ? Model.Average(d => d.EmployeeCount).ToString("F1") : "0")</h4>
                                            <small class="text-muted">Promedio Empleados/Depto.</small>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="text-center">
                                            <h4 class="text-info">@(Model.Any() ? Model.Max(d => d.EmployeeCount) : 0)</h4>
                                            <small class="text-muted">Mayor Departamento</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Mejorar la experiencia visual con animaciones
            $('.card').each(function(index) {
                $(this).delay(100 * index).fadeIn(500);
            });
            
            // Resaltar gerentes al pasar el mouse
            $('.table tbody tr').hover(
                function() {
                    if ($(this).hasClass('table-warning')) {
                        $(this).addClass('table-active');
                    }
                },
                function() {
                    $(this).removeClass('table-active');
                }
            );
        });
    </script>
}

@section Styles {
    <style>
        .card {
            display: none;
        }
        
        @@media print {
            .btn, .card-header button {
                display: none !important;
            }
            
            .card {
                border: 1px solid #000 !important;
                page-break-inside: avoid;
            }
            
            .alert {
                border: 1px solid #000 !important;
            }
        }
    </style>
}

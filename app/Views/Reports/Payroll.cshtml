@model List<app.ViewModels.PayrollReportViewModel>
@{
    ViewData["Title"] = "Reporte de Nómina";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h4 class="mb-0">
                                <i class="bi bi-file-earmark-text"></i> Reporte de Nómina
                            </h4>
                            <small>Listado completo de empleados con salarios actuales</small>
                        </div>
                        <div>
                            <form asp-action="ExportPayrollToCsv" method="post" class="d-inline">
                                <button type="submit" class="btn btn-light btn-sm">
                                    <i class="bi bi-download"></i> Exportar CSV
                                </button>
                            </form>
                        </div>
                    </div>
                </div>

                <div class="card-body">
                    <!-- Resumen -->
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="alert alert-info">
                                <h6><i class="bi bi-people"></i> Total de Empleados</h6>
                                <h4 class="mb-0">@ViewBag.EmployeeCount</h4>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="alert alert-success">
                                <h6><i class="bi bi-currency-dollar"></i> Nómina Total</h6>
                                <h4 class="mb-0">$@((ViewBag.TotalPayroll / 100m).ToString("N2"))</h4>
                            </div>
                        </div>
                    </div>

                    <!-- Tabla de Nómina -->
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Emp. No.</th>
                                    <th>CI</th>
                                    <th>Empleado</th>
                                    <th>Departamento</th>
                                    <th>Cargo</th>
                                    <th class="text-end">Salario Actual</th>
                                    <th>Fecha Contratación</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    var currentDepartment = "";
                                    var departmentTotal = 0m;
                                    var departmentCount = 0;
                                }
                                @foreach (var employee in Model)
                                {
                                    if (currentDepartment != employee.Department && !string.IsNullOrEmpty(currentDepartment))
                                    {
                                        <tr class="table-secondary">
                                            <td colspan="5" class="fw-bold">
                                                Subtotal @currentDepartment (@departmentCount empleados)
                                            </td>
                                            <td class="text-end fw-bold">$@departmentTotal.ToString("N2")</td>
                                            <td></td>
                                        </tr>
                                        departmentTotal = 0;
                                        departmentCount = 0;
                                    }

                                    if (currentDepartment != employee.Department)
                                    {
                                        currentDepartment = employee.Department;
                                        <tr class="table-primary">
                                            <td colspan="7" class="fw-bold text-uppercase">
                                                <i class="bi bi-building"></i> @employee.Department
                                            </td>
                                        </tr>
                                    }

                                    <tr>
                                        <td>@employee.EmpNo</td>
                                        <td>@employee.CI</td>
                                        <td>@employee.FullName</td>
                                        <td>@employee.Department</td>
                                        <td>
                                            <span class="badge bg-secondary">@employee.Title</span>
                                        </td>
                                        <td class="text-end">
                                            <strong>$@((employee.CurrentSalary / 100m).ToString("N2"))</strong>
                                        </td>
                                        <td>@employee.HireDate</td>
                                    </tr>

                                    departmentTotal += (employee.CurrentSalary / 100m);
                                    departmentCount++;
                                }

                                if (!string.IsNullOrEmpty(currentDepartment))
                                {
                                    <tr class="table-secondary">
                                        <td colspan="5" class="fw-bold">
                                            Subtotal @currentDepartment (@departmentCount empleados)
                                        </td>
                                        <td class="text-end fw-bold">$@departmentTotal.ToString("N2")</td>
                                        <td></td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot class="table-dark">
                                <tr>
                                    <th colspan="5">TOTAL GENERAL</th>
                                    <th class="text-end">$@((ViewBag.TotalPayroll / 100m).ToString("N2"))</th>
                                    <th>@ViewBag.EmployeeCount empleados</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>

                    @if (!Model.Any())
                    {
                        <div class="alert alert-warning text-center">
                            <i class="bi bi-exclamation-triangle"></i>
                            No hay datos de nómina disponibles.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Funcionalidad adicional para el reporte
        $(document).ready(function() {
            // Tooltip para los botones
            $('[data-bs-toggle="tooltip"]').tooltip();
            
            // Confirmación para exportar
            $('form[action*="ExportPayrollToCsv"]').on('submit', function(e) {
                if (!confirm('¿Desea exportar el reporte de nómina a CSV?')) {
                    e.preventDefault();
                }
            });
        });
    </script>
}

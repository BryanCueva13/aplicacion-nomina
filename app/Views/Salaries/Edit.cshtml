@model app.Models.Salary
@{
    ViewData["Title"] = "Editar Salario";
}
<h2>Editar Salario</h2>
<form asp-action="Edit" asp-route-empNo="@Model.EmpNo" asp-route-fromDate="@Model.FromDate" method="post">
    <input type="hidden" name="EmpNo" value="@Model.EmpNo" />
    <input type="hidden" name="FromDate" value="@Model.FromDate" />
    <div class="mb-3">
        <label class="form-label">Empleado</label>
        <input class="form-control" value="@Model.Employee.FirstName @Model.Employee.LastName" disabled />
    </div>
    <div class="mb-3">
        <label class="form-label">Salario</label>
        <input class="form-control" name="SalaryAmount" value="@Model.SalaryDecimal" />
    </div>
    <div class="mb-3">
        <label class="form-label">Desde</label>
        <input class="form-control" value="@Model.FromDate" disabled />
        <small class="form-text text-muted">La fecha de inicio no se puede modificar (es parte de la clave)</small>
    </div>
    <div class="mb-3">
        <label class="form-label">Hasta</label>
        <input class="form-control" name="ToDate" value="@Model.ToDate" />
    </div>
    <button class="btn btn-primary" type="submit">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

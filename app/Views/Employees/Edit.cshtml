@model app.Models.Employee

@{
    ViewData["Title"] = "Editar Empleado";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>
        <i class="bi bi-pencil text-primary me-2"></i>
        Editar Empleado - @Model.FullName
    </h1>
    <div>
        <a asp-action="Details" asp-route-id="@Model.EmpNo" class="btn btn-outline-info me-2">
            <i class="bi bi-eye me-1"></i>
            Ver Detalles
        </a>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i>
            Volver a Lista
        </a>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
            
            <input asp-for="EmpNo" type="hidden" />
            
            <!-- Información Personal -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-person me-2"></i>
                        Información Personal
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="CI" class="form-label">Cédula de Identidad</label>
                                <input asp-for="CI" class="form-control" />
                                <span asp-validation-for="CI" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="BirthDate" class="form-label">Fecha de Nacimiento</label>
                                <input asp-for="BirthDate" type="date" class="form-control" />
                                <span asp-validation-for="BirthDate" class="text-danger"></span>
                                @if (Model.BirthDateTime.HasValue)
                                {
                                    var age = DateTime.Now.Year - Model.BirthDateTime.Value.Year;
                                    if (DateTime.Now.DayOfYear < Model.BirthDateTime.Value.DayOfYear) age--;
                                    <div class="form-text">Edad actual: @age años</div>
                                }
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="FirstName" class="form-label">Nombres</label>
                                <input asp-for="FirstName" class="form-control" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="LastName" class="form-label">Apellidos</label>
                                <input asp-for="LastName" class="form-control" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Gender" class="form-label">Género</label>
                                <select asp-for="Gender" class="form-select">
                                    <option value="">Seleccionar género</option>
                                    <option value="M">Masculino</option>
                                    <option value="F">Femenino</option>
                                </select>
                                <span asp-validation-for="Gender" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Email" class="form-label">Correo Electrónico</label>
                                <input asp-for="Email" type="email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Información Laboral -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-briefcase me-2"></i>
                        Información Laboral
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="HireDate" class="form-label">Fecha de Contratación</label>
                                <input asp-for="HireDate" type="date" class="form-control" />
                                <span asp-validation-for="HireDate" class="text-danger"></span>
                                @if (Model.HireDatetime.HasValue)
                                {
                                    var years = DateTime.Now.Year - Model.HireDatetime.Value.Year;
                                    if (DateTime.Now.DayOfYear < Model.HireDatetime.Value.DayOfYear) years--;
                                    <div class="form-text">Años de servicio: @years años</div>
                                }
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Número de Empleado</label>
                                <input value="@Model.EmpNo" class="form-control" readonly />
                                <div class="form-text">Este número no se puede modificar</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Botones de acción -->
            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-x-circle me-1"></i>
                    Cancelar
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-circle me-1"></i>
                    Guardar Cambios
                </button>
            </div>
        </form>
    </div>
    
    <!-- Panel de información -->
    <div class="col-lg-4">
        <div class="card mb-4">
            <div class="card-header">
                <h6 class="mb-0">
                    <i class="bi bi-info-circle me-2"></i>
                    Información del Empleado
                </h6>
            </div>
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-5">Empleado #:</dt>
                    <dd class="col-sm-7">@Model.EmpNo</dd>
                    
                    @if (Model.BirthDateTime.HasValue)
                    {
                        var age = DateTime.Now.Year - Model.BirthDateTime.Value.Year;
                        if (DateTime.Now.DayOfYear < Model.BirthDateTime.Value.DayOfYear) age--;
                        <dt class="col-sm-5">Edad:</dt>
                        <dd class="col-sm-7">@age años</dd>
                    }
                    
                    @if (Model.HireDatetime.HasValue)
                    {
                        var years = DateTime.Now.Year - Model.HireDatetime.Value.Year;
                        if (DateTime.Now.DayOfYear < Model.HireDatetime.Value.DayOfYear) years--;
                        <dt class="col-sm-5">Años de servicio:</dt>
                        <dd class="col-sm-7">@years años</dd>
                    }
                    
                    <dt class="col-sm-5">Usuario:</dt>
                    <dd class="col-sm-7">
                        @if (Model.User != null)
                        {
                            <span class="badge bg-success">@Model.User.Username</span>
                        }
                        else
                        {
                            <span class="text-muted">Sin acceso</span>
                        }
                    </dd>
                </dl>
            </div>
        </div>
        
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0">
                    <i class="bi bi-exclamation-triangle me-2"></i>
                    Advertencias
                </h6>
            </div>
            <div class="card-body">
                <div class="alert alert-warning mb-0">
                    <ul class="mb-0 small">
                        <li>Cambiar la cédula puede afectar registros relacionados</li>
                        <li>Modificar fechas puede afectar cálculos de antigüedad</li>
                        <li>Cambiar el email afectará las notificaciones del sistema</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

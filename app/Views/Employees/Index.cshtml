@model List<app.Models.Employee>

@{
    ViewData["Title"] = "Lista de Empleados";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>
        <i class="bi bi-people-fill text-primary me-2"></i>
        Lista de Empleados
    </h1>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-person-plus me-1"></i>
        Nuevo Empleado
    </a>
</div>

<!-- Tabla de empleados -->
<div class="card">
    <div class="card-body p-0">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>#</th>
                            <th>Nombre Completo</th>
                            <th>CI</th>
                            <th>Email</th>
                            <th>Género</th>
                            <th>Fecha Contratación</th>
                            <th>Estado</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var employee in Model)
                        {
                            <tr>
                                <td>
                                    <span class="fw-medium">#@employee.EmpNo</span>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-sm bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-2">
                                            @employee.FullName.Substring(0, Math.Min(2, employee.FullName.Length)).ToUpper()
                                        </div>
                                        <div>
                                            <div class="fw-semibold">@employee.FullName</div>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <span class="fw-medium">@employee.CI</span>
                                </td>
                                <td>
                                    <a href="mailto:@employee.Email" class="text-decoration-none">
                                        @employee.Email
                                    </a>
                                </td>
                                <td>
                                    <span class="badge @(employee.Gender == "M" ? "bg-info" : "bg-warning")">
                                        @(employee.Gender == "M" ? "Masculino" : "Femenino")
                                    </span>
                                </td>
                                <td>
                                    <div>@(employee.HireDatetime?.ToString("dd/MM/yyyy") ?? employee.HireDate)</div>
                                    @if (employee.HireDatetime.HasValue)
                                    {
                                        var years = DateTime.Now.Year - employee.HireDatetime.Value.Year;
                                        if (DateTime.Now.DayOfYear < employee.HireDatetime.Value.DayOfYear) years--;
                                        <small class="text-muted">@years años</small>
                                    }
                                </td>
                                <td>
                                    @if (employee.User != null)
                                    {
                                        <span class="badge bg-success">
                                            <i class="bi bi-person-check me-1"></i>
                                            Activo
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">
                                            <i class="bi bi-person-dash me-1"></i>
                                            Sin acceso
                                        </span>
                                    }
                                </td>
                                <td>
                                    <div class="dropdown">
                                        <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" 
                                                data-bs-toggle="dropdown" aria-expanded="false">
                                            Acciones
                                        </button>
                                        <ul class="dropdown-menu">
                                            <li>
                                                <a class="dropdown-item" asp-action="Details" asp-route-id="@employee.EmpNo">
                                                    <i class="bi bi-eye me-2"></i>Ver Detalles
                                                </a>
                                            </li>
                                            <li>
                                                <a class="dropdown-item" asp-action="Edit" asp-route-id="@employee.EmpNo">
                                                    <i class="bi bi-pencil me-2"></i>Editar
                                                </a>
                                            </li>
                                            <li><hr class="dropdown-divider"></li>
                                            <li>
                                                <a class="dropdown-item text-danger" asp-action="Delete" asp-route-id="@employee.EmpNo">
                                                    <i class="bi bi-trash me-2"></i>Eliminar
                                                </a>
                                            </li>
                                        </ul>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-people display-1 text-muted"></i>
                <h4 class="mt-3">No hay empleados registrados</h4>
                <p class="text-muted">Aún no hay empleados registrados en el sistema.</p>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-person-plus me-1"></i>
                    Agregar Primer Empleado
                </a>
            </div>
        }
    </div>
</div>

@section Styles {
    <style>
        .avatar-sm {
            width: 32px;
            height: 32px;
            font-size: 12px;
            font-weight: 600;
        }
        
        .dropdown-toggle::after {
            margin-left: 0.5em;
        }
    </style>
}

@model app.Models.Employee

@{
    ViewData["Title"] = "Detalles del Empleado";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>
        <i class="bi bi-eye text-primary me-2"></i>
        Detalles del Empleado
    </h1>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.EmpNo" class="btn btn-primary me-2">
            <i class="bi bi-pencil me-1"></i>
            Editar
        </a>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i>
            Volver a Lista
        </a>
    </div>
</div>

<div class="row">
    <div class="col-lg-4">
        <!-- Tarjeta de perfil -->
        <div class="card mb-4">
            <div class="card-body text-center">
                <div class="avatar-lg bg-primary text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3">
                    @Model.FullName.Substring(0, Math.Min(2, Model.FullName.Length)).ToUpper()
                </div>
                <h4 class="mb-1">@Model.FullName</h4>
                <p class="text-muted mb-3">Empleado #@Model.EmpNo</p>
                @if (ViewBag.CurrentDepartment != null)
                {
                    <span class="badge bg-info mb-2">
                        <i class="bi bi-building me-1"></i>
                        @ViewBag.CurrentDepartment
                    </span>
                }
                <span class="badge @(ViewBag.IsManager == true ? "bg-warning text-dark" : "bg-secondary") mb-2">
                    <i class="bi bi-person-badge me-1"></i>
                    @(ViewBag.IsManager == true ? "Gerente" : "Empleado")
                </span>
                
                @if (Model.User != null)
                {
                    <span class="badge bg-success mb-3">
                        <i class="bi bi-person-check me-1"></i>
                        Usuario Activo: @Model.User.Username
                    </span>
                }
                else
                {
                    <span class="badge bg-secondary mb-3">
                        <i class="bi bi-person-dash me-1"></i>
                        Sin acceso al sistema
                    </span>
                }
                
                <div class="d-grid gap-2">
                    <a href="mailto:@Model.Email" class="btn btn-outline-primary">
                        <i class="bi bi-envelope me-1"></i>
                        Enviar Email
                    </a>
                </div>
            </div>
        </div>
        
        <!-- Información rápida -->
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0">
                    <i class="bi bi-clock me-2"></i>
                    Información Rápida
                </h6>
            </div>
            <div class="card-body">
                <dl class="row mb-0">
                    @if (Model.BirthDateTime.HasValue)
                    {
                        var age = DateTime.Now.Year - Model.BirthDateTime.Value.Year;
                        if (DateTime.Now.DayOfYear < Model.BirthDateTime.Value.DayOfYear) age--;
                        <dt class="col-sm-5">Edad:</dt>
                        <dd class="col-sm-7">@age años</dd>
                    }
                    
                    @if (Model.HireDatetime.HasValue)
                    {
                        var years = DateTime.Now.Year - Model.HireDatetime.Value.Year;
                        if (DateTime.Now.DayOfYear < Model.HireDatetime.Value.DayOfYear) years--;
                        <dt class="col-sm-5">Antigüedad:</dt>
                        <dd class="col-sm-7">@years años</dd>
                    }
                    
                    <dt class="col-sm-5">Género:</dt>
                    <dd class="col-sm-7">
                        <span class="badge @(Model.Gender == "M" ? "bg-info" : "bg-warning")">
                            @(Model.Gender == "M" ? "Masculino" : "Femenino")
                        </span>
                    </dd>
                    
                    @if (Model.User != null)
                    {
                        <dt class="col-sm-5">Rol:</dt>
                        <dd class="col-sm-7">
                            <span class="badge bg-secondary">@Model.User.Role</span>
                        </dd>
                    }
                </dl>
            </div>
        </div>
    </div>
    
    <div class="col-lg-8">
        <!-- Información personal detallada -->
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="bi bi-person me-2"></i>
                    Información Personal
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-5">Nombres:</dt>
                            <dd class="col-sm-7">@Model.FirstName</dd>
                            
                            <dt class="col-sm-5">Apellidos:</dt>
                            <dd class="col-sm-7">@Model.LastName</dd>
                            
                            <dt class="col-sm-5">CI:</dt>
                            <dd class="col-sm-7">@Model.CI</dd>
                        </dl>
                    </div>
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-5">Email:</dt>
                            <dd class="col-sm-7">
                                <a href="mailto:@Model.Email">@Model.Email</a>
                            </dd>
                            
                            <dt class="col-sm-5">Nacimiento:</dt>
                            <dd class="col-sm-7">
                                @(Model.BirthDateTime?.ToString("dd/MM/yyyy") ?? Model.BirthDate)
                            </dd>
                            
                            <dt class="col-sm-5">Género:</dt>
                            <dd class="col-sm-7">@(Model.Gender == "M" ? "Masculino" : "Femenino")</dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Información laboral -->
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="bi bi-briefcase me-2"></i>
                    Información Laboral
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-6">Empleado #:</dt>
                            <dd class="col-sm-6">@Model.EmpNo</dd>
                            
                            <dt class="col-sm-6">Fecha Ingreso:</dt>
                            <dd class="col-sm-6">
                                @(Model.HireDatetime?.ToString("dd/MM/yyyy") ?? Model.HireDate)
                            </dd>
                        </dl>
                    </div>
                    <div class="col-md-6">
                        @if (Model.HireDatetime.HasValue)
                        {
                            var years = DateTime.Now.Year - Model.HireDatetime.Value.Year;
                            if (DateTime.Now.DayOfYear < Model.HireDatetime.Value.DayOfYear) years--;
                            <dl class="row">
                                <dt class="col-sm-6">Años Servicio:</dt>
                                <dd class="col-sm-6">@years años</dd>
                            </dl>
                        }
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Acceso al sistema -->
        @if (Model.User != null)
        {
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-shield-lock me-2"></i>
                        Acceso al Sistema
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-5">Usuario:</dt>
                                <dd class="col-sm-7">@Model.User.Username</dd>
                                
                                <dt class="col-sm-5">Rol:</dt>
                                <dd class="col-sm-7">
                                    <span class="badge bg-secondary">@Model.User.Role</span>
                                </dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-5">Estado:</dt>
                                <dd class="col-sm-7">
                                    <span class="badge bg-success">Activo</span>
                                </dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>
        }
        
        <!-- Botones de acción -->
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="bi bi-gear me-2"></i>
                    Acciones
                </h5>
            </div>
            <div class="card-body">
                <div class="d-flex gap-2 flex-wrap">
                    <a asp-action="Edit" asp-route-id="@Model.EmpNo" class="btn btn-primary">
                        <i class="bi bi-pencil me-1"></i>
                        Editar Información
                    </a>
                    <button type="button" class="btn btn-outline-secondary" onclick="window.print()">
                        <i class="bi bi-printer me-1"></i>
                        Imprimir
                    </button>
                    <a asp-action="Delete" asp-route-id="@Model.EmpNo" class="btn btn-outline-danger">
                        <i class="bi bi-trash me-1"></i>
                        Eliminar
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .avatar-lg {
            width: 80px;
            height: 80px;
            font-size: 24px;
            font-weight: 600;
        }
    </style>
}

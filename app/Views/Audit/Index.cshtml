@model IEnumerable<app.Models.GeneralAuditLog>
@{
    ViewData["Title"] = "Auditoría de Cambios";
}

<div class="row">
    <div class="col-md-12">
        <h2><i class="fas fa-history"></i> Auditoría de Cambios</h2>
        <p class="text-muted">Registro completo de todas las operaciones realizadas en el sistema</p>
    </div>
</div>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">
        <i class="fas fa-exclamation-triangle"></i> @ViewBag.Error
    </div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        <i class="fas fa-exclamation-triangle"></i> @TempData["ErrorMessage"]
    </div>
}

@if (ViewBag.CombinedLogs != null)
{
    var combinedLogs = ViewBag.CombinedLogs as List<dynamic>;
    if (combinedLogs != null && combinedLogs.Any())
    {
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">
                    <i class="fas fa-list"></i> Historial de Cambios
                </h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-striped table-hover mb-0">
                        <thead class="table-dark">
                            <tr>
                                <th><i class="fas fa-clock"></i> Fecha y Hora</th>
                                <th><i class="fas fa-user"></i> Usuario</th>
                                <th><i class="fas fa-cogs"></i> Operación</th>
                                <th><i class="fas fa-table"></i> Módulo</th>
                                <th><i class="fas fa-user-tie"></i> Empleado</th>
                                <th><i class="fas fa-info-circle"></i> Detalle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var log in combinedLogs)
                            {
                                <tr>
                                    <td>
                                        <small class="text-muted">
                                            @(((DateTime)log.FechaActualizacion).ToString("dd/MM/yyyy HH:mm:ss"))
                                        </small>
                                    </td>
                                    <td>
                                        <span class="badge bg-secondary">
                                            <i class="fas fa-user"></i> @log.Usuario
                                        </span>
                                    </td>
                                    <td>
                                        @{
                                            string badgeClass = log.TipoOperacion == "Creación" ? "bg-success" :
                                                               log.TipoOperacion == "Modificación" ? "bg-warning text-dark" :
                                                               log.TipoOperacion == "Eliminación" ? "bg-danger" : "bg-info";
                                            
                                            string iconClass = log.TipoOperacion == "Creación" ? "fas fa-plus" :
                                                             log.TipoOperacion == "Modificación" ? "fas fa-edit" :
                                                             log.TipoOperacion == "Eliminación" ? "fas fa-trash" : "fas fa-info";
                                        }
                                        <span class="badge @badgeClass">
                                            <i class="@iconClass"></i> @log.TipoOperacion
                                        </span>
                                    </td>
                                    <td>
                                        @{
                                            string tableClass = log.Tabla == "Empleados" ? "text-primary" :
                                                              log.Tabla == "Salarios" || log.Tabla.Contains("Salarios") ? "text-success" :
                                                              log.Tabla == "Títulos" ? "text-info" :
                                                              log.Tabla.Contains("Departamento") ? "text-warning" : "text-secondary";
                                            
                                            string moduleIcon = log.Tabla == "Empleados" ? "fas fa-users" :
                                                              log.Tabla == "Salarios" || log.Tabla.Contains("Salarios") ? "fas fa-dollar-sign" :
                                                              log.Tabla == "Títulos" ? "fas fa-certificate" :
                                                              log.Tabla.Contains("Departamento") ? "fas fa-building" : "fas fa-table";
                                        }
                                        <span class="@tableClass fw-bold">
                                            <i class="@moduleIcon"></i> @log.Tabla
                                        </span>
                                    </td>
                                    <td>
                                        @if (log.EmpNo != null)
                                        {
                                            <a href="/Employees/Details/@log.EmpNo" class="text-decoration-none">
                                                <i class="fas fa-external-link-alt"></i> @log.EmpleadoNombre
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="text-muted">
                                                <i class="fas fa-minus"></i> @log.EmpleadoNombre
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        <small>@log.DetalleCambio</small>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="card shadow">
            <div class="card-body text-center py-5">
                <div class="mb-4">
                    <i class="fas fa-history fa-4x text-muted"></i>
                </div>
                <h4 class="text-muted">No hay registros de auditoría</h4>
                <p class="text-muted mb-4">
                    Aún no se han registrado cambios en el sistema. Los cambios aparecerán aquí automáticamente cuando realices operaciones.
                </p>
                <div class="row justify-content-center">
                    <div class="col-md-8">
                        <div class="list-group list-group-flush">
                            <div class="list-group-item border-0 px-0">
                                <i class="fas fa-user-plus text-primary"></i>
                                <strong>Empleados:</strong> Crear, editar o eliminar empleados
                            </div>
                            <div class="list-group-item border-0 px-0">
                                <i class="fas fa-dollar-sign text-success"></i>
                                <strong>Salarios:</strong> Modificar salarios de empleados
                            </div>
                            <div class="list-group-item border-0 px-0">
                                <i class="fas fa-certificate text-info"></i>
                                <strong>Títulos:</strong> Asignar o cambiar títulos de trabajo
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
}
else
{
    <div class="alert alert-danger">
        <div class="row align-items-center">
            <div class="col-auto">
                <i class="fas fa-exclamation-triangle fa-2x"></i>
            </div>
            <div class="col">
                <h4 class="alert-heading">Error al cargar auditoría</h4>
                <p class="mb-0">No se pudo cargar la información de auditoría. Por favor, contacta al administrador del sistema.</p>
            </div>
        </div>
    </div>
}

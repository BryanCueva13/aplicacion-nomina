@model RegisterViewModel

@{
    ViewData["Title"] = "Registro de Usuario";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow">
            <div class="card-body">
                <div class="text-center mb-4">
                    <i class="bi bi-person-plus display-4 text-success"></i>
                    <h3 class="card-title mt-2">Registro de Usuario</h3>
                    <p class="text-muted">Complete el formulario para crear una nueva cuenta</p>
                </div>

                <form asp-action="Register" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="FirstName" class="form-label">
                                    <i class="bi bi-person"></i> @Html.DisplayNameFor(m => m.FirstName)
                                </label>
                                <input asp-for="FirstName" class="form-control" placeholder="Ingrese su nombre" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="LastName" class="form-label">
                                    <i class="bi bi-person"></i> @Html.DisplayNameFor(m => m.LastName)
                                </label>
                                <input asp-for="LastName" class="form-control" placeholder="Ingrese su apellido" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="CI" class="form-label">
                                    <i class="bi bi-card-text"></i> @Html.DisplayNameFor(m => m.CI)
                                </label>
                                <input asp-for="CI" class="form-control" placeholder="Ej: 12345678" />
                                <span asp-validation-for="CI" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="Gender" class="form-label">
                                    <i class="bi bi-gender-ambiguous"></i> @Html.DisplayNameFor(m => m.Gender)
                                </label>
                                <select asp-for="Gender" class="form-control">
                                    <option value="">Seleccione...</option>
                                    <option value="M">Masculino</option>
                                    <option value="F">Femenino</option>
                                </select>
                                <span asp-validation-for="Gender" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="BirthDate" class="form-label">
                                    <i class="bi bi-calendar"></i> @Html.DisplayNameFor(m => m.BirthDate)
                                </label>
                                <input asp-for="BirthDate" class="form-control" />
                                <span asp-validation-for="BirthDate" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="HireDate" class="form-label">
                                    <i class="bi bi-calendar-check"></i> @Html.DisplayNameFor(m => m.HireDate)
                                </label>
                                <input asp-for="HireDate" class="form-control" />
                                <span asp-validation-for="HireDate" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Email" class="form-label">
                            <i class="bi bi-envelope"></i> @Html.DisplayNameFor(m => m.Email)
                        </label>
                        <input asp-for="Email" class="form-control" placeholder="usuario@empresa.com" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <hr>

                    <div class="form-group mb-3">
                        <label asp-for="Username" class="form-label">
                            <i class="bi bi-person-circle"></i> @Html.DisplayNameFor(m => m.Username)
                        </label>
                        <input asp-for="Username" class="form-control" placeholder="Nombre de usuario único" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                        <small class="form-text text-muted">Este será su nombre para iniciar sesión</small>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="Password" class="form-label">
                                    <i class="bi bi-lock"></i> @Html.DisplayNameFor(m => m.Password)
                                </label>
                                <input asp-for="Password" class="form-control" placeholder="Mínimo 6 caracteres" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="ConfirmPassword" class="form-label">
                                    <i class="bi bi-check2-square"></i> @Html.DisplayNameFor(m => m.ConfirmPassword)
                                </label>
                                <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirme su contraseña" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-success btn-lg">
                            <i class="bi bi-person-plus"></i> Registrarse
                        </button>
                        <a href="@Url.Action("Login")" class="btn btn-link">
                            ¿Ya tienes cuenta? Inicia sesión aquí
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

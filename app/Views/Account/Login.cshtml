@{
    Layout = "_Layout";
}

@model app.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Iniciar Sesión";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
        <div class="card shadow">
            <div class="card-body">
                <div class="text-center mb-4">
                    <i class="bi bi-people-fill display-4 text-primary"></i>
                    <h3 class="card-title mt-2">Sistema de Gestión</h3>
                    <p class="text-muted">Ingrese sus credenciales para acceder</p>
                </div>

                <form asp-action="Login" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    
                    <div class="form-group mb-3">
                        <label asp-for="Username" class="form-label">
                            <i class="bi bi-person"></i> @Html.DisplayNameFor(m => m.Username)
                        </label>
                        <input asp-for="Username" class="form-control" placeholder="Ingrese su usuario" autocomplete="username" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Password" class="form-label">
                            <i class="bi bi-lock"></i> @Html.DisplayNameFor(m => m.Password)
                        </label>
                        <input asp-for="Password" class="form-control" placeholder="Ingrese su contraseña" autocomplete="current-password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-check mb-3">
                        <input asp-for="RememberMe" class="form-check-input" />
                        <label asp-for="RememberMe" class="form-check-label">
                            @Html.DisplayNameFor(m => m.RememberMe)
                        </label>
                    </div>

                    <input type="hidden" asp-for="ReturnUrl" />

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="bi bi-box-arrow-in-right"></i> Iniciar Sesión
                        </button>
                    </div>

                    <hr>
                    <div class="text-center">
                        <a href="@Url.Action("Register")" class="btn btn-link">
                            <i class="bi bi-person-plus"></i> ¿No tienes cuenta? Regístrate aquí
                        </a>
                    </div>
                </form>
            </div>
        </div>
        <div class="text-center mt-3">
            <small class="text-muted">
                ¿Problemas para acceder? Contacte al administrador del sistema.
            </small>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

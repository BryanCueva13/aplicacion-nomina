@model ChangePasswordViewModel

@{
    ViewData["Title"] = "Cambiar Contrase単a";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow">
            <div class="card-header">
                <h4 class="mb-0">
                    <i class="bi bi-key"></i> Cambiar Contrase単a
                </h4>
            </div>
            <div class="card-body">
                <form asp-action="ChangePassword" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    
                    <div class="form-group mb-3">
                        <label asp-for="CurrentPassword" class="form-label">
                            <i class="bi bi-lock"></i> @Html.DisplayNameFor(m => m.CurrentPassword)
                        </label>
                        <input asp-for="CurrentPassword" class="form-control" />
                        <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="NewPassword" class="form-label">
                            <i class="bi bi-lock-fill"></i> @Html.DisplayNameFor(m => m.NewPassword)
                        </label>
                        <input asp-for="NewPassword" class="form-control" />
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                        <small class="form-text text-muted">
                            La contrase単a debe tener al menos 6 caracteres.
                        </small>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="ConfirmPassword" class="form-label">
                            <i class="bi bi-check2-square"></i> @Html.DisplayNameFor(m => m.ConfirmPassword)
                        </label>
                        <input asp-for="ConfirmPassword" class="form-control" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle"></i> Cambiar Contrase単a
                        </button>
                        <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Cancelar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
